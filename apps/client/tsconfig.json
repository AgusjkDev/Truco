{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "esnext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "plugins": [{ "name": "next" }],
        "target": "ES5",
        "baseUrl": ".",
        "paths": { "@/*": ["./src/*"], "~/*": ["../server/src/*"] }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
